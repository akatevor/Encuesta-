@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="register-container">
    <h2>Registrarse</h2>

    @if(ViewBag.Error != null)
    {
        <div style="color:red; margin-bottom:10px;">@ViewBag.Error</div>
    }

    <form method="post" asp-controller="Registro" asp-action="ComprobarRegistro">
        <div class="input-group">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" required />
        </div>

        <div class="input-group">
            <label for="apellido">Apellido</label>
            <input type="text" id="apellido" name="apellido" required />
        </div>

        <div class="input-group">
            <label for="facultad">Facultad</label>
            <select id="facultad" name="facultad" required>
                
                @foreach (var f in ViewBag.Facultades)
                {
                    <option value="@f">@f</option>
                }
            </select>
        </div>

        <div class="input-group">
            <label for="ciudad">Ciudad</label>
            <select id="ciudad" name="ciudad" required>
                
                @foreach (var c in ViewBag.Ciudades)
                {
                    <option value="@c">@c</option>
                }
            </select>
        </div>

        <div class="input-group">
            <label for="sexo">Sexo</label>
            <select id="sexo" name="sexo" required>
                <option value="Masculino">Masculino</option>
                <option value="Femenino">Femenino</option>
            </select>
        </div>

        <div class="input-group">
            <label for="usuario">Nombre de Usuario</label>
            <input type="text" id="usuario" name="usuario" required />
        </div>

        <div class="input-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" required />
        </div>

        <div class="input-group">
            <label for="confirmarPassword">Confirmar Contraseña</label>
            <input type="password" id="confirmarPassword" name="confirmarPassword" required />
        </div>

        <div class="botones">
            <button type="submit">Registrarse</button>
            <a asp-controller="Login" asp-action="Login">
                <button type="button">Cancelar</button>
            </a>
        </div>
    </form>
</div>

<style>
    .register-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        text-align: center;
    }

    .input-group {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"],
    select {
        width: 100%;
        padding: 8px;
        font-size: 14px;
        box-sizing: border-box;
    }

    .botones {
        text-align: center;
        margin-top: 10px;
    }

    .botones button {
        padding: 10px 20px;
        font-size: 14px;
        cursor: pointer;
        margin-right: 10px;
    }
</style>
